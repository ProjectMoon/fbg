    public BorderChooser(CustomBorderGenerator cbg, Color bgc, Color fgc) {
        super((javax.swing.JFrame)null, true);

        initComponents();
        
        this.spnTop.setValue(cbg.getEdgeWidth(BorderLocation.Top));
        this.spnBottom.setValue(cbg.getEdgeWidth(BorderLocation.Bottom));
        this.spnLeft.setValue(cbg.getEdgeWidth(BorderLocation.Left));
        this.spnRight.setValue(cbg.getEdgeWidth(BorderLocation.Right));
        
        this.lblSample.setBorder(cbg.generateBorder());
        this.lblSample.setBackground(bgc);
        this.lblSample.setForeground(fgc);
        
        this.clrChooser.setColor(cbg.getEdgeColor(BorderLocation.Top));
        
        customGen = cbg;
        
        this.clrChooser.getSelectionModel().addChangeListener(this);
        this.spnTop.addChangeListener(this);
        this.spnBottom.addChangeListener(this);
        this.spnLeft.addChangeListener(this);
        this.spnRight.addChangeListener(this);
    }
    
    public CustomBorderGenerator getBorder() {
        return customGen;
    }
    
    public boolean isOk() {
        return this.okClick;
    }

