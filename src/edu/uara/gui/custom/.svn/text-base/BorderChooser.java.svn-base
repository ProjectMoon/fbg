    public void stateChanged(ChangeEvent e) {
        this.customGen.setEdgeColor(BorderLocation.Top, this.clrChooser.getColor());
        this.customGen.setEdgeWidth(BorderLocation.Top, (Integer)this.spnTop.getValue());
        this.customGen.setEdgeWidth(BorderLocation.Bottom, (Integer)this.spnBottom.getValue());
        this.customGen.setEdgeWidth(BorderLocation.Left, (Integer)this.spnLeft.getValue());
        this.customGen.setEdgeWidth(BorderLocation.Right, (Integer)this.spnRight.getValue());
        
        this.lblSample.setBorder(this.customGen.generateBorder());
    }

